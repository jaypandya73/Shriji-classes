<div class="container">
  <div class="row">
    <div class="col-md-8 center-block" style="float: none;">


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<%= bootstrap_form_for(@form) do |f| %>
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% @form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field form-group">
    
     
<div class= "form-group">
    <%= f.date_select :Registration_Date , class: "form-control"%>
  </div>

</div>
  <div class="field">
    
    <%= f.text_field :Students_Full_Name %>
  </div>

  <div class="field">
    
    <%= f.select :Standard, options_for_select([['8','8'],['9','9'],['10','10']]) ,prompt: "Select Your Standard..." %>
  </div>
 <br>
 
<h4><b> Personal Details: </b></h4>
<br>


  <div class="field"> 
  
    
    <%= f.select :School_name ,options_for_select([["Jainacharya Anand Ghansuri Vidhyalaya,Jainacharya Anand Ghansuri Vidhyalaya"],["Himat High School","Himat High School"],["Myown High School","Myown High School"]]), prompt:"Select Your School Here....."%>
  </div>

 

  <div class="field">
    
    <%= f.text_area :Residential_Address %>
  </div>
  <div class="field">
    <label></label>
    <%= f.text_field :Fathers_mobile_number, label: "Father's Mobile Number"  %>
  </div>
  <div class="field">
   
    <%= f.text_field :Other_contact_number %>
  </div>
  <div class="field">

 
    
    <%= f.text_field :Maths %>
  </div>
  <div class="field">
   
    <%= f.text_field :Science_and_Technology %>
  </div>
  <div class="field">
    
    <%= f.text_field :Previous_standard_result,label:"Last Result",placeholder:"Result in %" %>
  </div>
  <div class="form-group">
    <%= f.button:submit,  class: "btn btn-info pull-center" %>
  </div>
<% end %>
</div>
</div>
</div>
